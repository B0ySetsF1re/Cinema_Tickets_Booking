<div class="modal fade" id="changeRolesModal" tabindex="-1" aria-labelledby="removeUsersModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Changing role(s)</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form id="changeRolesBodyForm" class="d-flex justify-content-center mb-3">
          <div class="form-group p-2">
            <h5 class="text-center">You selected:</h5>
            <div class="form-inline">
              <label class="my-1 mr-4">First Name</label>
              <label class="my-1 mr-4">Last Name</label>
              <label class="my-1 mr-4">E-Mail</label>
              <label class="my-1 mr-4">Username</label>
              <select class="custom-select my-1 mr-sm-2">
                <option selected>Choose...</option>
                <option value="Basic">Basic</option>
                <option value="Manager">Manager</option>
                <option value="Admin">Administrator</option>
              </select>
            </div>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="changeRolesConfirmBtn" type="button" class="btn btn-primary">Confirm</button>
      </div>
    </div>
  </div>
</div>
